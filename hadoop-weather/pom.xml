<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<name>hadoop-weather</name>
	<groupId>com.xebia.summerclass.hadoop</groupId>
	<artifactId>hadoop-weather</artifactId>
	<version>0.1-SNAPSHOT</version>
	<packaging>jar</packaging>
	<inceptionYear>2011</inceptionYear>

    <parent>
        <groupId>com.xebia.summerclass.hadoop</groupId>
        <artifactId>hadoop-parent</artifactId>
        <version>0.1-SNAPSHOT</version>
    </parent>

	<dependencies>
        <dependency>
            <groupId>com.xebia.summerclass.hadoop</groupId>
            <artifactId>hadoop-core</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
                    <descriptors>
                        <descriptor>src/main/assembly/jar-with-dependencies.xml</descriptor>
                    </descriptors>
					<archive>
						<manifest>
							<mainClass>com.xebia.summerclass.hadoop.weather.mapreduce.JobRunner</mainClass>
						</manifest>
					</archive>
				</configuration>
				<executions>
					<execution>
						<id>make-super-jar</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
